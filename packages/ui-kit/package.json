{
  "name": "@virtocommerce/ui-kit",
  "version": "0.0.3",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --stream --formats commonjs --target lib --name ui-kit ./src/index.ts",
    "lint": "vue-cli-service lint --fix",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook"
  },
  "main": "./dist/ui-kit.common.js",
  "files": [
    "dist/*",
    "src/ui-kit.d.ts",
    "src/**/*.vue"
  ],
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^3.0.0",
    "vue-logger-plugin": "^2.1.2"
  },
  "devDependencies": {
    "@storybook/addon-controls": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/core": "^6.3.4",
    "@storybook/vue3": "^6.3.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.0",
    "eslint": "^6.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.13.0",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.3.5",
    "vue-cli-plugin-storybook": "~2.1.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "vue-cli-service lint --fix",
      "git add"
    ]
  },
  "types": "./src/ui-kit.d.ts"
}
