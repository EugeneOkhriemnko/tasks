{
  "name": "@virtocommerce/platform-manager-sdk",
  "version": "0.0.5",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "prepare": "npm run bootstrap",
    "postinstall": "husky install",
    "serve:demo": "lerna run serve --stream --scope @virtocommerce/platform-manager-demo",
    "build": "lerna run build",
    "build:ui": "lerna run build --scope @virtocommerce/platform-manager-ui",
    "build:core": "lerna run build --scope @virtocommerce/platform-manager-core",
    "build:rest-client": "lerna run build --scope @virtocommerce/platform-manager-rest-client",
    "build:demo": "lerna run build --scope @virtocommerce/platform-manager-demo",
    "storybook-build:ui": "lerna run storybook:build --stream --scope @virtocommerce/platform-manager-ui",
    "storybook-serve:ui": "lerna run storybook:serve --stream --scope @virtocommerce/platform-manager-ui",
    "publish": "lerna publish",
    "lint": "eslint --fix packages/**/*.{ts,vue}",
    "lint-staged": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "lerna version $npm_package_version --conventional-commits --no-commit-hooks --no-push --ignore-scripts --force-publish --no-git-tag-version --yes && git add .",
    "postversion": "git push origin --tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.31.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.14.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix"
  }
}
