{
  "name": "@virtocommerce/platform-manager-sdk",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "prepare": "npm run bootstrap && husky install",
    "serve:demo-manager": "lerna run serve --stream --scope @virtocommerce/demo-manager",
    "build": "lerna run build",
    "build:ui-kit": "lerna run build --scope @virtocommerce/ui-kit",
    "build:shell": "lerna run build --scope @virtocommerce/shell",
    "build:api-client": "lerna run build --scope @virtocommerce/api-client",
    "build:demo-manager": "lerna run build --scope @virtocommerce/demo-manager",
    "storybook-serve:ui-kit": "lerna run storybook:serve --stream --scope @virtocommerce/ui-kit",
    "storybook-build:ui-kit": "lerna run storybook:build --stream --scope @virtocommerce/ui-kit",
    "publish": "lerna publish",
    "lint": "eslint --fix packages/**/*.{ts,vue}"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "chalk": "^2.4.2",
    "eslint": "^7.31.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.14.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "commit-msg": "node scripts/verifyCommitMsg.js",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix"
  }
}
